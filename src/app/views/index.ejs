      <div class="mid">
        <div class="categories">
          <div class="row row-cols-1 row-cols-md-4">
            <%for(var i =0; i<4; i++) {%>
              <form action="/insertProdCarr" method="post">
                <div class="col mb-4">
                  <div class="card">
                    <img src="/image/<%-produtosPrincipais[i].foto%>" class="card-img-top">
                    <div class="card-body">
                      <h5 class="card-title"><%-produtosPrincipais[i].nome%></h5>
                      <small class="form-text text-muted">Código do produto: <%-produtosPrincipais[i].codigo%>
                        <input type="number" class="form-control" id="idProduto" name="idProduto" min="1" value="<%-produtosPrincipais[i].codigo%>" style="display: none;"></small>
                      <p class="card-text"><%-produtosPrincipais[i].descricao%></p>
                      <div class="card-footer">
                        <div class="input-group mb-3">
                          <div class="input-group-prepend" id="button-addon3">
                            <button class="btn btn-primary" type="submit">Comprar</button>
                            <button class="btn btn-secondary" type="button" disabled>R$ <%-produtosPrincipais[i].valor%></button>
                          </div>
                          <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="Quantidade" min="1" required>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            <%}%>
          </div>
        </div>
